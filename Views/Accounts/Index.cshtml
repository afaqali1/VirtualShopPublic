@model IEnumerable<VirtualShop.Models.AppUser>

@{
    ViewData["Title"] = "Index";
}
@*
<h1>Index</h1>
*@



<div class="container-fluid pt-4 px-4">

    <div class="row g-4">

        <div class="col-sm-12 col-xl-2">
        </div>

        <div class="col-sm-12 col-xl-8">
            <div class="border m-3 p-5" style="border-radius:10px">

                <div class="bg-primary p-3 mb-5" style="border-radius:10px">
                    <div>
                        <h1 class="text-center">Accounts Available</h1>
                    </div>
                </div>
                <div>

                    <div class="btn btn-outline-primary" style="border-radius:10px"><a asp-action="Create" class="">Create New Account</a></div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EncryptedPassword)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.EncryptedPassword)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    
                        
                </div>
            </div>



        </div>

        <div class="col-sm-12 col-xl-2">
        </div>

    </div>
</div>
